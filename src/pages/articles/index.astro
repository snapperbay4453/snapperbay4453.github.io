---
import Layout from '../../layouts/Layout.astro';

interface Frontmatter {
  title: string;
  description?: string;
}
export interface MarkdownInstance {
  /* Any data specified in this file's YAML frontmatter */
  frontmatter: Frontmatter;
  /* The file path of this file */
  file: string;
  /* The rendered path of this file */
  url: string | undefined;
  /* Astro Component that renders the contents of this file */
  Content: any;
  /* Function that returns an array of the h1...h6 elements in this file */
  getHeadings(): Promise<{ depth: number; slug: string; text: string }[]>;
}

const allArticles = import.meta.glob<MarkdownInstance>('../articles/**/*.md', { eager: true })
  const articles = Object.entries(allArticles).map(([path, md]) => ({
    url: path.replace('../../articles/', '').replace('.md', ''),
    title: md.frontmatter.title,
    Content: md.Content
  }));
---

<Layout title="Welcome to Astro.">
  <section>
    <h2>Articles</h2>
    <h3>All articles here!</h3>

    <div>
      {
        articles.map(({ title, Content }) => (
          <article>
            <h2>{title}</h2>
            <Content />
          </article>
        ))
      }
    </div>
  </section>
</Layout>
