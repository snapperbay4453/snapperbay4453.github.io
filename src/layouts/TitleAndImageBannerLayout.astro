---
const { title, subtitle, imagePath } = Astro.props;
---

<div class='relative flex gap-2 max-w-2xl mx-auto min-h-[200px] my-4 sm:p-4 5xl:px-0'>
  <div class='grow flex flex-col justify-center gap-2 flex-wrap sm:w-1/2 sm:ml-0'>
    <p class='text-3xl font-bold text-center sm:text-left'>
      {imagePath ? (
        <img
          class={`
            inline
            relative
            sm:absolute
            sm:right-4
            h-auto w-10 sm:w-20
            object-contain
            mr-2
          `}
          src={imagePath}
        ></img>
      ) : ''}
      {title ?? ''}
    </p>
    <p class='text-2xl font-bold text-center sm:text-left'>{subtitle ?? ''}</p>
  </div>
</div>
